{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>No. of comments</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for post in paginator.items %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.author.name }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.contentShort }}</td>
                <td>{{ post.date }}</td>
                <td>{{ post.comments.count() }}</td>
                <td>
                    <a class="btn btn-secondary btn-sm square" role="button" href="{{ path('app_post_show', {'id': post.id}) }}">show</a>
                    <a class="btn btn-secondary btn-sm square" role="button" href="{{ path('app_comment_new', {'post': post.id}) }}">add comment</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'paginator.html.twig' %}

    <a class="btn btn-secondary btn-sm square" role="button" href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}
